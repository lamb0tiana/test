{% extends 'base.html.twig' %}

{% block title %}Hello FormController!{% endblock %}
{% set prototype = form_widget(form.fields.vars.prototype) %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }


    </style>

    <div class="example-wrapper">
        <input type="hidden" name="prototype" value="{{ prototype }}"/>
        {{ form_row(form.name) }}
        {{ prototype | replace({'__name__':0})| raw }}

        <div id="fields_container" class="text-center">
            <button id="add_row" class="btn btn-secondary btn-sm">Ajouter un champ</button>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('generic_form') }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('generic_form') }}
{% endblock %}