{
  "compilerOptions": {
    "target": "es5",                         // La version du JavaScript que TypeScript va générer
    "module": "commonjs",                    // Le format du module JavaScript
    "strict": true,                          // Active toutes les vérifications de type strictes
    "esModuleInterop": true,                 // Permet l'importation de modules CommonJS avec `import`
    "skipLibCheck": true,                    // Ignore la vérification des types des fichiers de définition de bibliothèque
    "forceConsistentCasingInFileNames": true, // Assure que la casse des noms de fichiers est cohérente
                   // Dossier de base pour les chemins relatifs

  },
  "include": [
    "assets/**/*"                               // Inclut tous les fichiers TypeScript dans le dossier src
  ],
  "exclude": [
    "node_modules",                          // Exclut le dossier node_modules
    "public"                                   // Exclut le dossier dist
  ]
}
